<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.pembelajaran.Permainan1"
    android:background="@drawable/background">

    <View
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/circle"
        android:id="@+id/viewlv1" />
    <View
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/circle"
        android:id="@+id/viewlv2" />
    <View
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/circle"
        android:id="@+id/viewlv3" />
    <View
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/circle"
        android:id="@+id/viewlv4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10pt"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:text="LEVEL1"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:id="@+id/tvNav1"
        android:layout_alignTop="@+id/viewlv1"
        android:layout_alignStart="@+id/viewlv1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10pt"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="190dp"
        android:text="LEVEL2"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/viewlv1"
        android:layout_alignStart="@+id/viewlv1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10pt"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="50dp"
        android:text="LEVEL3"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/viewlv1"
        android:layout_alignStart="@+id/viewlv1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10pt"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="190dp"
        android:text="LEVEL4"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/viewlv1"
        android:layout_alignStart="@+id/viewlv1" />


</RelativeLayout>
